{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      // Point this to your Webpack output directory (usually 'dist')
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      // This is the magic line that runs your watch script before launching
      "preLaunchTask": "npm: watch"
    }
  ]
}