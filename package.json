{
  "name": "project-session-manager",
  "displayName": "Project Session Manager",
  "description": "Store and manage project sessions with context files",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Project Session Manager",
      "properties": {
        "projectSession.search.excludePatterns": {
          "type": "array",
          "default": ["node_modules/**", "**/node_modules/**", ".git/**", "**/dist/**"],
          "description": "File patterns to exclude from search results (in addition to .gitignore)"
        }
      }
    },
    "commands": [
      {
        "command": "projectSession.showWebview",
        "title": "Show Project Session Manager"
      },
      {
        "command": "projectSession.addFileToContext",
        "title": "Add File to Context"
      },
      {
        "command": "projectSession.addSelectionToContext",
        "title": "Add Selection to Context"
      },
      {
        "command": "projectSession.clearContext",
        "title": "Clear Context"
      },
      {
        "command": "projectSession.removeContextFile",
        "title": "Remove from Context"
      },
      {
        "command": "projectSessionExplorer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "keybindings": [
      {
        "command": "projectSession.addFileToContext",
        "key": "ctrl+l",
        "mac": "cmd+l"
      },
      {
        "command": "projectSession.addSelectionToContext",
        "key": "ctrl+i",
        "mac": "cmd+i"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "project-session-explorer",
          "title": "Project Session",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "project-session-explorer": [
        {
          "id": "projectSessionExplorer",
          "name": "Context Files",
          "type": "webview"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "projectSessionExplorer",
        "contents": "No context files yet. Use Ctrl+L to add the current file or Ctrl+I to add selected code.\n[Clear Context](command:projectSession.clearContext)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "projectSession.showWebview",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "projectSession.removeContextFile",
          "when": "view == projectSessionExplorer && viewItem == contextFile",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "projectSessionExplorer.refresh",
          "when": "view == projectSessionExplorer",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "watch": "webpack --watch --mode development",
    "build": "webpack --mode production"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.0.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "vscode-test": "^1.6.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "minimatch": "^3.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}