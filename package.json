{
  "name": "vscode-context-mcp-extension",
  "displayName": "VS Code Context MCP Extension",
  "description": "Store and manage project sessions with context files",
  "version": "2.2.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:contextMCPExplorer",
    "onCommand:contextMCP.getTerminalContent",
    "onCommand:contextMCP.addFileToContext",
    "onCommand:contextMCP.addSelectionToContext",
    "onCommand:contextMCP.showWebview",
    "onCommand:contextMCP.clearContext",
    "onCommand:contextMCP.removeContextFile"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "VS Code Context MCP Extension",
      "properties": {
        "contextMCP.search.excludePatterns": {
          "type": "array",
          "default": [
            "node_modules/**",
            "**/node_modules/**",
            ".git/**",
            "**/dist/**"
          ],
          "description": "File patterns to exclude from search results (in addition to .gitignore)"
        }
      }
    },
    "commands": [
      {
        "command": "contextMCP.showWebview",
        "title": "Show VS Code Context MCP Extension"
      },
      {
        "command": "contextMCP.getTerminalContent",
        "title": "Get Terminal Content"
      },
      {
        "command": "contextMCP.addFileToContext",
        "title": "Add File to Context"
      },
      {
        "command": "contextMCP.addSelectionToContext",
        "title": "Add Selection to Context"
      },
      {
        "command": "contextMCP.clearContext",
        "title": "Clear Context"
      },
      {
        "command": "contextMCP.removeContextFile",
        "title": "Remove from Context"
      },
      {
        "command": "contextMCPExplorer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "keybindings": [
      {
        "command": "contextMCP.addFileToContext",
        "key": "ctrl+l",
        "mac": "cmd+l"
      },
      {
        "command": "contextMCP.addSelectionToContext",
        "key": "ctrl+i",
        "mac": "cmd+i"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vscode-context-explorer",
          "title": "VS Code Context",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "vscode-context-explorer": [
        {
          "id": "contextMCPExplorer",
          "name": "Context Files",
          "type": "webview"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "contextMCPExplorer",
        "contents": "No context files yet. Use Ctrl+L to add the current file or Ctrl+I to add selected code.\n[Clear Context](command:contextMCP.clearContext)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "contextMCP.showWebview",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "contextMCP.removeContextFile",
          "when": "view == contextMCPExplorer && viewItem == contextFile",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "contextMCPExplorer.refresh",
          "when": "view == contextMCPExplorer",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "test:core": "npx ts-node src/tests/test-runner.ts",
    "test:no-lint": "node ./test/runTest.js",
      "dev": "npm run watch",
    "watch": "webpack --watch --mode development",
    "demo:component": "npx ts-node src/tests/card-replacement-demo.ts",
    "demo:php": "npx ts-node src/tests/php-replacement-demo.ts",
    "demo:typescript": "npx ts-node src/tests/calculateModification.ts",
    "demo:typescript-fixed": "npx ts-node src/tests/calculateModification-fixed.ts",
    "demo:typescript-preview": "npx ts-node src/tests/calculateModification-fixed.ts",
    "demo:typescript-no-preview": "npx ts-node src/tests/calculateModification-fixed.ts --no-preview",
    "build": "webpack --mode production"
  },
  "devDependencies": {
    "@types/diff": "^7.0.2",
    "@types/express": "^5.0.1",
    "@types/minimatch": "^3.0.5",
    "@types/node": "^16.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.57.1",
    "glob": "^7.2.0",
    "globals": "^16.3.0",
    "mocha": "^9.1.3",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.0",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.39.0",
    "vscode-test": "^1.6.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "diff": "^8.0.2",
    "express": "^5.1.0",
    "fast-glob": "^3.3.3",
    "minimatch": "^3.1.2",
    "php-parser": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "swagger-jsdoc": "^6.2.8"
  }
}
