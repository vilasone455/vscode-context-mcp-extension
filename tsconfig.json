{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "lib": ["DOM", "ES2020"],
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "webview/src/**/*"
  ],
  "exclude": ["node_modules", ".vscode-test", "dist"]
}
